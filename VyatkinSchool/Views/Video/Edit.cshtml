@model VyatkinSchool.Models.VideoFileItem
@{
    ViewBag.Title = "Редактировать видео";
}

<div id="page">
    <div class="container">
        <div class="title">
            <h2>@ViewBag.Title.</h2>
        </div>
        <hr />

        @using (Html.BeginForm("Edit", "Video", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal was-validated", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <table border="0" align="center" cellpadding="5" cellspacing="0">
                <tr>
                    <td width="40%">@Html.LabelFor(x => x.Title)</td>
                    <td width="60%">@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td width="40%">@Html.LabelFor(m => m.Description)</td>
                    <td width="60%">@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })</td>
                </tr>
                <tr align="center">
                    <td colspan="2" align="center">
                        <p>
                            <video style="width:600px; height:auto;" controls>
                                <source src="@Url.Content(@Model.FilePath)" type="video/mp4" />
                            </video>
                        </p>

                    </td>
                </tr>
                <tr>
                    <td width="40%">Если вы хотите заменить само видео, загрузите новое:</td>
                    <td width="60%">
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="uploadVideoFile" name="uploadVideoFile">
                            </div>
                        </div>
                    </td>
                </tr>
                <tr align="right">
                    <td width="40%"></td>
                    <td width="60%">
                        <button class="btn btn-warning" type="submit">
                            Редактировать видео
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </button>

                        <a href="@Url.Action("List", "Video")" class="btn btn-primary ">
                            Отменить
                            <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            </table>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

