@model VyatkinSchool.Models.VideoFileItem
@{
    ViewBag.Title = "Видео успешно добавленно";
}

<div id="page">
    <div class="container">
        <div class="title">
            <h2>@ViewBag.Title.</h2>
        </div>

        <hr />
        <a href="@Url.Action("Add", "Video")" class="btn btn-primary">
            Добавить ещё одно видео
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </a>

        <a href="@Url.Action("Show", "Video")" class="btn btn-primary">
            Перейти к видео
            <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
        </a>

        <a href="@Url.Action("List", "Video")" class="btn btn-primary">
            Перейти к списку видео
            <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
        </a>
        <hr />

        <p>Видео добавленно успешно.</p>

        <table border="0" align="center" cellpadding="5" cellspacing="0">
            <tr>
                <td><strong>@Model.Title)</strong></td>
            </tr>
            <tr>
                <td>@Model.Description)</td>
            </tr>
            <tr>
                <td>
                    <div class="video-frame">
                        <video style="width:100%; height:auto;" controls>
                            <source src="@Url.Content(Model.FilePath)" type="video/mp4" />
                        </video>
                    </div>
                </td>
            </tr>
        </table>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
