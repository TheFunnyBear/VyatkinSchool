@model VyatkinSchool.Models.AcountViewModels.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<div id="page">
    <div class="container">
    <div class="title">
        <h2>@ViewBag.Title.</h2>
    </div>

    <h4>Создайте новую учетную запись.</h4>
    <hr />

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="box">
            <table border="0" align="center" cellpadding="15" cellspacing="0" width="1000">
                <tr>
                    <td align="right" width="50%">@Html.LabelFor(m => m.Email, new { @class = "control-label" })</td>
                    <td align="left" width="50%">@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td align="right" width="50%">@Html.LabelFor(m => m.Password, new { @class = "control-label" })</td>
                    <td align="left" width="50%">@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td align="right" width="50%">@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })</td>
                    <td align="left" width="50%">@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })</td>
                </tr>

                <tr class="form-group">
                    <td colspan="2" align="right"><input type="submit" class="btn btn-default" value="Регистрация" /></td>
                </tr>
            </table>
        </div>
    }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
