@model VyatkinSchool.Models.MessageItem
@{
    ViewBag.Title = "Сообщение успешно созданно";
}

<div id="page">
    <div class="container">
        <div class="title">
            <h2>@ViewBag.Title.</h2>
        </div>

        <hr />

        <a href="@Url.Action("Add", "Message")" class="btn btn-primary">
            Добавить ещё одно собщение
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </a>
        <a href="@Url.Action("List", "Message")" class="btn btn-primary">
            Перейти к списку новостей
            <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
        </a>

        <hr />

        <h2>@Model.Date: @Model.Title</h2>

        <div class="box">
            <p>@Html.Raw(Model.MessageText)<p>
                @if (Model.ImageId != null)
                {
                <p><img src='@Url.Action("ShowImageForGalleryItem", "Image", new { id = Model.ImageId})' /></p>
                }
            </div>

        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
