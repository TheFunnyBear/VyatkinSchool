@model VyatkinSchool.Models.Contacts

<div id="page">
    <div class="container">
        <div class="title">
            <h2>КОНТАКТЫ</h2>
            <p>Контактные информация.</p>
            <div class="box">
                <address class="resume-text">
                    <table border="0">
                        <tr>
                            <td width="70%">
                                <strong>Тренер: @Model.FullName</strong>
                                <br />
                                <abbr title="E-Mail для связи">E-Mail: </abbr>
                                <a href="mailto:>@Model.Email">@Model.Email</a>
                                <br />
                                <abbr title="Контактный телефон">Телефон: </abbr>@Model.Phone
                                <br />
                                <br />
                            </td>
                            <td width="30%">
                                <div class="resume-contacts-text">
                                    <abbr title="Отсканируйте QR-код своим мобильным, чтобы получить контную информацию">QR код с контной информацией: </abbr> <br />
                                    <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.QrCode))" />
                                    <br />
                                    <abbr title="Скачать файл с контной информацией">Файл с контной информацией: </abbr> <i> @Html.ActionLink("скачать", "VCardFile") </i>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <table border="0" align="center">
                        <tr>
                            <abbr title="Занятия проводятся тут">Занятия проводятся в: </abbr>
                            <br />
                            г. Севастополь, ул. Костомаровская, д3, в здании ДЮСШ "Чайка"
                            <br />
                        <tr/>
                    </table>
                    <table border="0" align="center">
                            <tr>
                                <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A0d6293e94346121f9f4f845e2e72e8ec2fad54abfb897d2ab1ed4863d2d57505&amp;width=609&amp;height=499&amp;lang=ru_RU&amp;scroll=true"></script>
                                <br />
                            </tr>
                    </table>
                </address>
            </div>
        </div>
    </div>
</div>
