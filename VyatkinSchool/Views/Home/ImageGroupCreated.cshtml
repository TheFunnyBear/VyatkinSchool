@model VyatkinSchool.Models.ExistedGalleryGroups

@{
    ViewBag.Title = "ImageGroupCreated";
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Школа борьбы: Создание альбома</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    @using System.Web.Optimization

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</head>

<body>
    @Html.Partial("NavBarView")


    <div id="page">
        <div class="container">
            <div class="title">
                <h2>Создание альбома</h2>
                <a href="@Url.Action("AddImageGroup", "Home")" class="btn btn-primary">
                    Cоздать ещё один альбом
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("AddImage", "Home")" class="btn btn-primary">
                    Добавить новое изображение в альбом
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Gallery", "Home")" class="btn btn-primary">
                    Перейти к галлереи
                    <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                </a>

                @if (Model.Succsessful)
                {
                    <p>Альбом <strong>[@Model.CreatedGrop.GroupName]</strong> создан успешно.</p>
                }
                else if(!Model.Succsessful && Model.AlreadyCreated)
                {
                    <p>Альбом <strong>[@Model.CreatedGrop.GroupName]</strong> уже был создан.</p>
                }
                <div class="box">
                    @if (Model.Groups.Any())
                    {
                        <table width="100%" border="0" align="center" cellpadding="5" cellspacing="0">
                            <tr>
                                <th align="center" bgcolor="#4C4532" style="color:rgba(255,255,255,0.6)">Список созданных <strong>альбомов</strong>:</th>
                            </tr>
                            @foreach (var group in Model.Groups)
                            {
                                <tr>
                                    <td align="left">
                                        @if (Model.CreatedGrop.ID == @group.ID)
                                        {
                                            <strong>@group.GroupName</strong>
                                        }
                                        else
                                        {
                                            @group.GroupName
                                        }
                                    </td>
                                </tr>
                            }
                        </table>
                    }
                    
                   
                </div>
            </div>
        </div>
    </div>


    @Html.Partial("Footer")
</body>
</html>
