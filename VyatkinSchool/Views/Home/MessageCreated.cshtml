@model VyatkinSchool.Models.Message

@{
    ViewBag.Title = "MessageCreated";
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Школа борьбы: Добавление сообщения</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    @using System.Web.Optimization

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</head>

<body>
    @Html.Partial("NavBarView")

    <div id="page">
        <div class="container">
            <div class="title">
                <h2>Добавление сообщения</h2>
                <p>Сообщение добавленно успешно.</p>
                <div class="box">
                    <a href="@Url.Action("AddMessage", "Home")" class="btn btn-primary">
                        Добавить ещё одно собщени
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        Перейти к списку новостей
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    </a>

                    <h2>@Model.Title</h2>
                    @if (Model.MessageText != null)
                    { 
                        <p>@Html.Raw(Model.MessageText)</p>
                    }
                    @if(Model.ImageId != null)
                    {
                        <p><img src='@Url.Action("show", "Image", new { id = Model.ImageId})' /></p>
                    }
                </div>
            </div>
        </div>
    </div>


    @Html.Partial("Footer")
</body>
</html>
